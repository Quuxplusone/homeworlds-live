<!DOCTYPE html>
<html>
	<head>
		<%- include("headElement") %>
		<title>Please Log In</title>
	</head>
	<body>
		<%- include("header") %>
		<div class="container">
			<h2>Log In</h2>
			<p class="lead">Don't have an account? <a href="/createAccount">Create one</a>.</p>
			<form id="login-form" method="post" action="/login">
				<% if (typeof error !== 'undefined') { _%>
				<h4 class="text-warning"><%= error %></h4>
				<% } %>
				<div class="form-group">
					<label for="login-username">Username</label>
					<input type="text" name="username" class="form-control" aria-describedby="login-username" />
				</div>
				<div class="form-group">
					<label for="login-password">Passphrase</label>
					<input type="password" name="password" class="form-control" aria-describedby="login-password" />
				</div>
				<input type="submit" value="Log In" class="btn btn-primary btn-lg" />
			</form>
		</div>
		<%- include("footer") %>
	<script src="/scripts/vendor.js?b97f1dbf9463b0a7cd02"></script></body>
</html>